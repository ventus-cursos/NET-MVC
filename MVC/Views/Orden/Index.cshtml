@using Ventus
@model Ventus.Models.Orden
@{
    ViewBag.Title = "Ordenes";
}
@Html.Partial("Crud")
@Html.Partial("Pager")
<table class="grid">
	<tr>
		<th>
		</th>
		<th>
			ID
		</th>
		<th>
			Cliente
		</th>
		<th>
			Fecha
		</th>
		<th>
			Total
		</th>
	</tr>
	@foreach (var o in Model.Data)
 {
        <tr>
			<td>
				@Html.CheckBox("chkSel", new { itemid = o.ID })
			</td>
			<td>
				@o.ID
			</td>
			<td>
				@Html.ActionLink(o.Cliente.NombreCompleto, "Edit", new { id = o.ID })
			</td>
			<td>
				@o.FechaOrden.ToDmy()
			</td>
			<td>
				@o.Total.ToString("C")
			</td>
		</tr>
 }
</table>
