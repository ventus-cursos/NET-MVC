@using Ventus
@model Ventus.Models.Cliente
@{
    ViewBag.Title = "Clientes";
}
@Html.Partial("Crud")
@Html.Partial("Pager")
<table class="grid">
	<tr>
		<th>
		</th>
		<th>
			ID
		</th>
		<th>
			Nombre
		</th>
		<th>
			Apellido
		</th>
		<th>
			Fecha de Nacimiento
		</th>
		<th>
			Ciudad
		</th>
	</tr>
	@foreach (var o in Model.Data)
 {
        <tr>
			<td>
				@Html.CheckBox("chkSel", new { itemid = o.ID })
			</td>
			<td>
				@o.ID
			</td>
			<td>
				@Html.ActionLink(o.Nombre, "Edit", new { id = o.ID })
			</td>
			<td>
				@Html.ActionLink(o.Apellido, "Edit", new { id = o.ID })
			</td>
			<td>
				@o.FechaNacimiento.ToDmy()
			</td>
			<td>
				@o.Ciudad.Nombre
			</td>
		</tr>
 }
</table>
