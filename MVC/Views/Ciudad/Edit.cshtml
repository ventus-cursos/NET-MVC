@model Ventus.BE.Ciudad
@{
    ViewBag.Title = "Ciudad";
}
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>ID
            </td>
            <td>
                @Html.DisplayFor(o => o.ID)
            </td>
        </tr>
        <tr>
            <td>Nombre
            </td>
            <td>
                @Html.EditorFor(o => o.Nombre)
            </td>
        </tr>
        <tr>
            <td>Estado
            </td>
            <td>
                @Html.DropDownListFor(o => o.Estado.ID,
                Ventus.DB.Estado.List(true)
                    .OrderBy(o => o.Nombre)
                    .Select(o => new SelectListItem
                    {
                        Text = o.Nombre,
                        Value = o.ID.ToString(),
                        Selected = o.ID == Model.Estado.ID
                    }),
                    "<seleccione>")
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: right">
                <input type="submit" value="Guardar" />
                <input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index")    '" />
            </td>
        </tr>
    </table>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#Nombre').focus();
    });
</script>
